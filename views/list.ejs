<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= list_title %> list</h1>
    <h1>Today is <%= dayofweek %></h1>
</div>
<div class="box">
    <% taskArray.forEach(function(task){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkboxstatus" value="<%= task._id %>" onChange="this.form.submit()">
                <p>
                    <%= task.name %>
                </p>
            </div>
            <input type="hidden" name="listName" value="<%= list_title %>"></input>
        </form>
      <%  }); %>
        <form action="/" method="post">
            <input type="text" name="task" placeholder="Add a new task here" autocomplete="off">
            <button type="submit" name="list" value="<%= list_title %>">+</button>
        </form>
    </div>
<%- include("footer") -%>